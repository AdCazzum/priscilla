{
  "schema_version": "wasm-abi/1",
  "types": {
    "ChatInfo": {
      "kind": "record",
      "fields": [
        {
          "name": "total_messages",
          "type": {
            "kind": "u32"
          }
        },
        {
          "name": "max_messages",
          "type": {
            "kind": "u32"
          }
        }
      ]
    },
    "ChatMessage": {
      "kind": "record",
      "fields": [
        {
          "name": "id",
          "type": {
            "kind": "u64"
          }
        },
        {
          "name": "sender",
          "type": {
            "kind": "string"
          }
        },
        {
          "name": "role",
          "type": {
            "kind": "string"
          }
        },
        {
          "name": "content",
          "type": {
            "kind": "string"
          }
        },
        {
          "name": "timestamp_ms",
          "type": {
            "kind": "u64"
          }
        }
      ]
    }
  },
  "methods": [
    {
      "name": "init",
      "params": [],
      "returns": {
        "kind": "unit"
      }
    },
    {
      "name": "send_message",
      "params": [
        {
          "name": "sender",
          "type": {
            "kind": "string"
          }
        },
        {
          "name": "role",
          "type": {
            "kind": "string"
          }
        },
        {
          "name": "content",
          "type": {
            "kind": "string"
          }
        }
      ],
      "returns": {
        "$ref": "ChatMessage"
      }
    },
    {
      "name": "messages",
      "params": [
        {
          "name": "offset",
          "type": {
            "kind": "u32"
          },
          "nullable": true
        },
        {
          "name": "limit",
          "type": {
            "kind": "u32"
          },
          "nullable": true
        }
      ],
      "returns": {
        "kind": "list",
        "items": {
          "$ref": "ChatMessage"
        }
      }
    },
    {
      "name": "clear_history",
      "params": [],
      "returns": {
        "kind": "unit"
      }
    },
    {
      "name": "set_max_messages",
      "params": [
        {
          "name": "max_messages",
          "type": {
            "kind": "u32"
          }
        }
      ],
      "returns": {
        "kind": "unit"
      }
    },
    {
      "name": "info",
      "params": [],
      "returns": {
        "$ref": "ChatInfo"
      }
    }
  ],
  "events": [
    {
      "name": "MessageAdded"
    },
    {
      "name": "HistoryCleared"
    },
    {
      "name": "MaxMessagesUpdated"
    }
  ]
}