{
  "schema_version": "wasm-abi/1",
  "types": {
    "AnswerResult": {
      "kind": "record",
      "fields": [
        {
          "name": "message",
          "type": {
            "$ref": "ChatMessage"
          }
        },
        {
          "name": "guess_was_correct",
          "type": {
            "kind": "bool"
          }
        }
      ]
    },
    "ChatMessage": {
      "kind": "record",
      "fields": [
        {
          "name": "id",
          "type": {
            "kind": "u64"
          }
        },
        {
          "name": "sender",
          "type": {
            "kind": "string"
          }
        },
        {
          "name": "role",
          "type": {
            "kind": "string"
          }
        },
        {
          "name": "content",
          "type": {
            "kind": "string"
          }
        },
        {
          "name": "timestamp_ms",
          "type": {
            "kind": "u64"
          }
        }
      ]
    },
    "GameInfo": {
      "kind": "record",
      "fields": [
        {
          "name": "admin",
          "type": {
            "kind": "string"
          },
          "nullable": true
        },
        {
          "name": "player_one",
          "type": {
            "kind": "string"
          },
          "nullable": true
        },
        {
          "name": "player_two",
          "type": {
            "kind": "string"
          },
          "nullable": true
        },
        {
          "name": "stage",
          "type": {
            "$ref": "GameStage"
          }
        },
        {
          "name": "secret_set",
          "type": {
            "kind": "bool"
          }
        },
        {
          "name": "total_messages",
          "type": {
            "kind": "u32"
          }
        },
        {
          "name": "max_messages",
          "type": {
            "kind": "u32"
          }
        },
        {
          "name": "awaiting_player",
          "type": {
            "kind": "string"
          },
          "nullable": true
        }
      ]
    },
    "GameStage": {
      "kind": "variant",
      "variants": [
        {
          "name": "NotStarted"
        },
        {
          "name": "WaitingForSecret"
        },
        {
          "name": "WaitingForQuestion"
        },
        {
          "name": "WaitingForAnswer"
        },
        {
          "name": "Completed"
        }
      ]
    },
    "GuessResult": {
      "kind": "record",
      "fields": [
        {
          "name": "guess_was_correct",
          "type": {
            "kind": "bool"
          }
        }
      ]
    }
  },
  "methods": [
    {
      "name": "init",
      "params": [],
      "returns": {
        "kind": "unit"
      }
    },
    {
      "name": "create_game",
      "params": [
        {
          "name": "admin",
          "type": {
            "kind": "string"
          }
        },
        {
          "name": "player_one",
          "type": {
            "kind": "string"
          }
        },
        {
          "name": "player_two",
          "type": {
            "kind": "string"
          }
        }
      ],
      "returns": {
        "$ref": "GameInfo"
      }
    },
    {
      "name": "set_secret",
      "params": [
        {
          "name": "requester",
          "type": {
            "kind": "string"
          }
        },
        {
          "name": "secret",
          "type": {
            "kind": "string"
          }
        }
      ],
      "returns": {
        "$ref": "GameInfo"
      }
    },
    {
      "name": "submit_question",
      "params": [
        {
          "name": "player",
          "type": {
            "kind": "string"
          }
        },
        {
          "name": "content",
          "type": {
            "kind": "string"
          }
        }
      ],
      "returns": {
        "$ref": "ChatMessage"
      }
    },
    {
      "name": "submit_answer",
      "params": [
        {
          "name": "player",
          "type": {
            "kind": "string"
          }
        },
        {
          "name": "content",
          "type": {
            "kind": "string"
          }
        },
        {
          "name": "guess",
          "type": {
            "kind": "string"
          },
          "nullable": true
        }
      ],
      "returns": {
        "$ref": "AnswerResult"
      }
    },
    {
      "name": "messages",
      "params": [
        {
          "name": "offset",
          "type": {
            "kind": "u32"
          },
          "nullable": true
        },
        {
          "name": "limit",
          "type": {
            "kind": "u32"
          },
          "nullable": true
        }
      ],
      "returns": {
        "kind": "list",
        "items": {
          "$ref": "ChatMessage"
        }
      }
    },
    {
      "name": "message_by_id",
      "params": [
        {
          "name": "id",
          "type": {
            "kind": "u64"
          }
        }
      ],
      "returns": {
        "$ref": "ChatMessage"
      }
    },
    {
      "name": "clear_history",
      "params": [
        {
          "name": "requester",
          "type": {
            "kind": "string"
          }
        }
      ],
      "returns": {
        "kind": "unit"
      }
    },
    {
      "name": "set_max_messages",
      "params": [
        {
          "name": "requester",
          "type": {
            "kind": "string"
          }
        },
        {
          "name": "max_messages",
          "type": {
            "kind": "u32"
          }
        }
      ],
      "returns": {
        "kind": "unit"
      }
    },
    {
      "name": "game_info",
      "params": [],
      "returns": {
        "$ref": "GameInfo"
      }
    },
    {
      "name": "check_guess",
      "params": [
        {
          "name": "guess",
          "type": {
            "kind": "string"
          }
        }
      ],
      "returns": {
        "$ref": "GuessResult"
      }
    },
    {
      "name": "get_secret",
      "params": [
        {
          "name": "requester",
          "type": {
            "kind": "string"
          }
        }
      ],
      "returns": {
        "kind": "string"
      }
    },
    {
      "name": "debug_reveal_secret",
      "params": [],
      "returns": {
        "kind": "string"
      }
    }
  ],
  "events": [
    {
      "name": "MessageAdded"
    },
    {
      "name": "HistoryCleared"
    },
    {
      "name": "GameCreated"
    },
    {
      "name": "SecretSet"
    },
    {
      "name": "SecretGuessed"
    },
    {
      "name": "StageChanged"
    }
  ]
}